{
    "exp": {
        "name": "inception_covid_1"
    },
    "mode": "train",
    "mode_comment": "'eval' or 'train'",
    "tester": {
        "checkpoint_path": ""
    },
    "model": {
        "backbone": "inception",
        "classifier": "zhang",
        "loss": "categorical_crossentropy",
        "learning_rate": 0.0001,
        "optimizer": "adam",
        "lr_schedule": "exp",
        "resize_shape": [512,512],
        "input_shape":[512,512,3]
    },
    "trainer": {
        "num_epochs": 20,
        "batch_size": 8,
        "validation_split": 0.1,
        "verbose_training": 1,
        "callbacks": true
    },
    "callbacks": {
        "checkpoint_monitor": "val_loss",
        "checkpoint_mode": "auto",
        "checkpoint_save_best_only": true,
        "checkpoint_save_weights_only": true,
        "checkpoint_verbose": true,
        "tensorboard_write_graph": true
    },
    "dataset": {
        "train": "data/data/dataset/kfold/1/train",
        "test": "data/data/dataset/kfold/1/test",
        "class_mode": "categorical",
        "classes": [0,1],
	"color_mode": "rgb"
    },
    "devices":{
        "gpus":[
            1
        ],
        "gpu":{
            "id":"3"
        }
    }
}
